{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "grunt",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build (server)",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "./server/server.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}